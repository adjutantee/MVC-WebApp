@model UserDeliveryInfoViewModel

<form method="post">

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="md-form mb-0">
                        <label asp-for="userOrderName">Ваше ФИО</label>
                        <input type="text" asp-for="userOrderName" class="form-control">
                        <span asp-validation-for="userOrderName"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="md-form mb-0">
                        <label asp-for="userOrderEmail">Электронный адрес</label>
                        <input type="email" asp-for="userOrderEmail" class="form-control">
                        <span asp-validation-for="userOrderEmail"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="md-form mb-0">
                        <label asp-for="userOrderPhone">Номер телефона</label>
                        <input type="number" asp-for="userOrderPhone" class="form-control">
                        <span asp-validation-for="userOrderPhone"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="md-form mb-0">
                        <label asp-for="userAdres">Адрес доставки</label>
                        <input type="text" asp-for="userAdres" class="form-control">
                        <span asp-validation-for="userAdres"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="md-form">
                        <label>Ваше сообщение</label>
                        <textarea type="text" name="userOrderMessage" rows="2" class="form-control md-textarea"></textarea>
                    </div>
                </div>
            </div>

            <div class="text-center text-md-left">
                <button class="btn btn-success" type="submit" asp-controller="Order" asp-action="Buy">Оформить</button>
            </div>
        </div>
    </div>
</form>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}