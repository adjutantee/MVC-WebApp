@using OnlineWebApp_MVC.Models
@model List<ProductViewModel>

    @if(Model.Count == 0)
{
    <h2>По Вашему запросу ничего не найдено</h2>
}
else
{
    <div class="row">
     @foreach (var product in Model)
    {

        <div class="col card shadow">
                <img class="card-img-top" src="/css/PHTTest.png">

            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost rub.</h5>
                <a class="btn btn-success" href="/cart/addtocart/@product.Id" role="button">добавить в корзину</a>
                <br />
               <br /> <a class="btn btn-primary" href="/comparison/addtocompare/@product.Id" role="button">сравнить</a>
                <br />
                <br /><a class="btn btn-danger" href="/favorites/addtofavorites/@product.Id" role="button">в избранное</a>
            </div>
        </div>

    }
    </div> 

}