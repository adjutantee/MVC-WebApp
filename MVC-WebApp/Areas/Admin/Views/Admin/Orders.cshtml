@using MVC_WebApp.Helpers
@using MVC_WebApp.Models
@using OnlineWebApp_MVC.Models
@model List<Order>


<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")

    <div class="col-9">
        <h3>Список заказов</h3>

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Сумма</th>
                            <th>Пользователь</th>
                            <th>Статус</th>
                            <th>Дата</th>
                            <th>Время</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Cost</td>
                                <td>Admin</td>
                                <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                                <td>@Model[i].CreateDateTime.ToString("d")</td>
                                <td>@Model[i].CreateDateTime.ToString("t")</td>
                                <td><a href="/admin/admin/OrderDetails?orderId=@Model[i].Id">Подробнее</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>