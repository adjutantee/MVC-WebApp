@using MVC_WebApp.Areas.Admin.Models
@using MVC_WebApp.Models
@model List<RoleViewModel>

<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")

    <div class="col-9">
        <h3>Список Ролей</h3>
        <a asp-area="Admin" asp-controller="Role" asp-action="addRole">Добавить новую роль</a>

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>
                                @*<td><a href="/admin/removeRole?roleName=@Model[i].Name">Удалить</a></td>*@
                                <td><a asp-area="Admin" asp-controller="Role" asp-action="RemoveRole" asp-route-roleName="@Model[i].Name">Удалить</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>